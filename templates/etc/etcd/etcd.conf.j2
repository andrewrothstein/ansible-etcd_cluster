# [member]
ETCD_NAME="{{inventory_hostname}}"
ETCD_DATA_DIR="{{etcd_cluster_data_dir}}"
#ETCD_SNAPSHOT_COUNTER="10000"
#ETCD_HEARTBEAT_INTERVAL="100"
#ETCD_ELECTION_TIMEOUT="1000"
ETCD_LISTEN_CLIENT_URLS="{{etcd_scheme}}://{{inventory_hostname}}:2379,{{etcd_scheme}}://{{etcd_public_ip}}:2379"
#ETCD_MAX_SNAPSHOTS="5"
#ETCD_MAX_WALS="5"
#ETCD_CORS=""
#
# [cluster]
{% if inventory_hostname in groups[etcd_master_group_name] %}
ETCD_LISTEN_PEER_URLS="{{etcd_scheme}}://{{inventory_hostname}}:2380,{{etcd_scheme}}://{{etcd_public_ip}}:2380"
ETCD_ADVERTISE_CLIENT_URLS="{{etcd_scheme}}://{{inventory_hostname}}:2379,{{etcd_scheme}}://{{etcd_public_ip}}:2379"
ETCD_INITIAL_ADVERTISE_PEER_URLS="{{etcd_scheme}}://{{inventory_hostname}}:2380,{{etcd_scheme}}://{{etcd_public_ip}}:2380"
{% endif %}
ETCD_INITIAL_CLUSTER="{{etcd_cluster}}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="{{etcd_initial_cluster_token}}"
# if you use different ETCD_NAME (e.g. test), set ETCD_INITIAL_CLUSTER value for this name, i.e. "test=http://..."
#ETCD_DISCOVERY=""
#ETCD_DISCOVERY_SRV=""
#ETCD_DISCOVERY_FALLBACK="proxy"
#ETCD_DISCOVERY_PROXY=""
#
#[proxy]
{% if inventory_hostname not in groups[etcd_master_group_name] %}
ETCD_PROXY="on"
{% endif %}
#
#[security]
{% if etcd_secure %}
ETCD_CERT_FILE="{{etcd_pki_cert_dest}}"
ETCD_KEY_FILE="{{etcd_pki_key_dest}}"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="{{etcd_pki_ca_cert_dest}}"
ETCD_PEER_CERT_FILE="{{etcd_pki_cert_dest}}"
ETCD_PEER_KEY_FILE="{{etcd_pki_key_dest}}"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="{{etcd_pki_ca_cert_dest}}"
{% endif %}
